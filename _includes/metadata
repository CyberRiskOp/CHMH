{% capture print-pdf-stylesheet %}print-pdf.css{% endcapture %}
{% capture paged-view-stylesheet %}paged-view.css{% endcapture %}
{% capture web-stylesheet %}web.css{% endcapture %}
{% capture epub-stylesheet %}epub.css{% endcapture %}
{% capture app-stylesheet %}app.css{% endcapture %}

{% comment %}
From meta.yml, get only the values where the work.directory matches the current book-directory
{% endcomment %}

{% assign works = site.data.meta.works | where: "directory", book-directory %}
{% assign work = site.data.meta.work %}

{% comment %}
Now capture each metadata value as a Liquid variable, to be used in HTML
and book content as a Liquid output tag e.g. {{ title }}
{% endcomment %}


    {% capture book-directory %}{{ work.directory }}{% endcapture %}
    {% assign title = work.title %}
    {% assign subtitle = work.subtitle %}
    {% assign creators = work.creators %}
    {% capture creators-line %}{% for creator in work.creators %}{{creator.firstName}} {{creator.lastName}}{% if forloop.last == true %}{% else %}, {% endif %}{% endfor %}{% endcapture %}
    {% assign contributors = work.contributors %}
    {% assign subjects = work.subjects %}
    {% assign description = work.description.short %}
    {% capture description-short %}{{ work.description.short }}{% endcapture %}
    {% assign publisher = work.publisher %}
    {% assign date = work.date %}
    {% capture modified %}{{ work.revision_history[0].date }}{% endcapture %}
    {% capture type %}{{ work.type }}{% endcapture %}
    {% assign identifiers = work.identifiers %}
